<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HomeActivity"
    android:background="#e6daf4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="286dp"
            android:layout_height="128dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/homebook" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/yes24"
                android:layout_width="153dp"
                android:layout_height="159dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:onClick="yes24click"
                app:srcCompat="@drawable/yes24" />

            <ImageButton
                android:id="@+id/aladin"
                android:layout_width="154dp"
                android:layout_height="159dp"
                android:onClick="aladinclick"
                app:srcCompat="@drawable/aladin" />
        </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/kyobobook"
            android:layout_width="156dp"
            android:layout_height="158dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:onClick="kyobobookclick"
            app:srcCompat="@drawable/kyobobook" />

        <ImageButton
            android:id="@+id/naverbook"
            android:layout_width="153dp"
            android:layout_height="158dp"
            android:onClick="naverbookclick"
            app:srcCompat="@drawable/naverbook" />    </LinearLayout>

    </LinearLayout>
</LinearLayout>